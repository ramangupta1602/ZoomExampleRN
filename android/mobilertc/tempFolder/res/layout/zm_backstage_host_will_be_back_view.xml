<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintContent"
    android:layout_width="match_parent"
    android:background="@color/zm_v1_black"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dynamicLL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/zm_v1_white_alpha9"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,5:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

       <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/tvNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/zm_margin_medium_size"
            android:text="@string/zm_gr_backstage_host_will_be_back_267913"
            android:textColor="#9EFFFFFF"
            android:textSize="@dimen/zm_font_larger_size" />

        <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/tvNoticePip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/zm_margin_medium_size"
            android:text="@string/zm_gr_backstage_host_will_be_back_267913"
            android:textColor="#9EFFFFFF"
            android:textSize="@dimen/zm_font_smaller_size"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>