<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pipPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zm_white"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="gone"
    >

    <com.zipow.videobox.view.AvatarView
        android:id="@+id/avatarView"
        android:layout_width="@dimen/zm_btn_medium_height"
        android:layout_height="@dimen/zm_btn_medium_height"
        android:layout_gravity="center_vertical"
        zoom:zm_description_enable="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/txtPipCallerName"
            style="@style/ZmTextView.Title.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="2"
            android:textSize="@dimen/zm_font_normal_size"
            tools:text="Reed Yang" />

        <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/txtPipMsgCalling"
            style="@style/ZmTextView.Content.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="2"
            android:text="@string/zm_msg_invite_to_meeting_472355"
            android:textSize="@dimen/zm_font_medium_size" />
    </LinearLayout>

</LinearLayout>