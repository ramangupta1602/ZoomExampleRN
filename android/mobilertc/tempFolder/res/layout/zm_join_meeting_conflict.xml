<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardBackgroundColor="@color/zm_image_attachment_background"
    app:cardCornerRadius="@dimen/zm_dialog_margin_12dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="0dp"
    android:layout_marginTop="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/zm_padding_medium"
        android:paddingTop="@dimen/zm_padding_large"
        android:paddingRight="@dimen/zm_padding_medium"
        android:paddingBottom="@dimen/zm_padding_large">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

            <us.zoom.uicommon.widget.view.ZMCommonTextView
                android:id="@+id/txtTime"
                style="@style/ZmTextView.Content.Primary.Small.Dimmed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zm_margin_smallest"
                android:gravity="center_vertical"
                android:paddingLeft="0dp"
                android:text="9:00" />


            <us.zoom.uicommon.widget.view.ZMCommonTextView
                android:id="@+id/txtTopic"
                style="@style/ZmTextView.Content.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zm_margin_smallest"
                android:gravity="center_vertical"
                android:paddingLeft="0dp"
                android:text="Topic" />
        </LinearLayout>

        <Button
            android:id="@+id/btnJoin"
            style="@style/ZmButton.Small"
            android:text="@string/zm_btn_join" />
    </LinearLayout>
</androidx.cardview.widget.CardView>