<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zm_white"
    android:orientation="vertical"
    android:gravity="center"
    android:descendantFocusability="blocksDescendants">
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/zm_im_search_shadow"/>

    <TextView
        android:id="@+id/txt_item_recent_search"
        style="@style/ZmTextView.Content.Primary.MediumPlus"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/zm_btn_clear_all_12050"
        android:textColor="@color/zm_v2_txt_action"/>
</LinearLayout>