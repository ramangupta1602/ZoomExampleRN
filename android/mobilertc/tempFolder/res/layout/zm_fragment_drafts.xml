<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zm_white">
    <LinearLayout
        android:id="@+id/panelForAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/panelTitleBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <us.zoom.zimmsg.view.IMMMConnectAlertView
            android:id="@+id/panelConnectionAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <us.zoom.uicommon.widget.view.ZMAlertView
            android:id="@+id/panelServerError"
            zoom:zm_type="WARNING"
            zoom:zm_need_cancel="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/empty_draft_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="400dp"
        android:visibility="gone"
        android:importantForAccessibility="yes"
        android:contentDescription="">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/zm_drafts_empty"
            android:importantForAccessibility="no"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zm_draft_tab_empty_title_426252"
            android:textSize="@dimen/zm_ui_kit_text_size_16sp"
            android:textColor="@color/zm_v2_txt_information_bold"
            app:fontWeight="500"
            android:importantForAccessibility="no"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zm_draft_tab_empty_content_426252"
            android:textSize="@dimen/zm_ui_kit_text_size_16sp"
            android:textColor="@color/zm_v2_txt_information"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            app:fontWeight="400"
            android:importantForAccessibility="no"
            />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sort_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zm_height_36dp"
        app:layout_constraintTop_toBottomOf="@id/panelForAlert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/zm_chat_typing_bg">
        <us.zoom.uicommon.widget.view.ZMButton
            android:id="@+id/sort_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/zm_dialog_margin_16dp"
            android:text="@string/zm_draft_tab_sort_most_recent_478534"
            android:drawableRight="@drawable/zm_ic_draft_drop_down"
            android:textSize="@dimen/zm_ui_kit_text_size_13sp"
            android:textColor="@color/zm_v2_txt_secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/draft_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/sort_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/selection_layout"
        app:layout_constraintVertical_bias="0"
        app:layout_constrainedHeight="true">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/draft_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/selection_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zm_height_84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">
        <us.zoom.uicommon.widget.view.ZMButton
            android:id="@+id/select_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zm_draft_tab_delete_select_all_478534"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/zm_dialog_margin_16dp"
            android:background="@drawable/zm_v2_bg_small_text_btn_light"
            />
        <us.zoom.uicommon.widget.view.ZMButton
            android:id="@+id/select_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zm_draft_tab_delete_delete_478534"
            android:textColor="@color/zm_v2_btn_desctructive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/zm_dialog_margin_16dp"
            android:background="@drawable/zm_v2_bg_small_text_btn_light"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/chat_input_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>