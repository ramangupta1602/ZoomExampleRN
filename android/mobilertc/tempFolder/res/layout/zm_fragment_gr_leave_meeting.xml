<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/leaveGrContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/zm_dialog_margin_24dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGRLeaveMeeting"
            style="@style/UIKitButton"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/zm_margin_large"
            android:layout_marginRight="@dimen/zm_margin_large"
            android:layout_marginTop="@dimen/zm_dialog_margin_24dp"
            android:background="@drawable/zm_ui_kit_btn_bg_action"
            android:layout_width="match_parent"
            android:text="@string/zm_btn_leave_webinar_150183" />

        <Button
            style="@style/UIKitButton.LeaveMeeting"
            android:id="@+id/btnBackStage"
            android:text="@string/zm_gr_backstage_go_backstage_267913"
            android:layout_width="match_parent" />

    </LinearLayout>

</ScrollView>