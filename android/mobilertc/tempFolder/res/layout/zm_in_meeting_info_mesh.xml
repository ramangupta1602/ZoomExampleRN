<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/in_meeting_info_bg"
    android:paddingLeft="@dimen/zm_dialog_margin_24dp"
    android:paddingTop="@dimen/zm_margin_normal_size"
    android:paddingRight="@dimen/zm_dialog_margin_24dp"
    android:paddingBottom="@dimen/zm_margin_normal_size">

    <LinearLayout
        android:id="@+id/verifyCodeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

       <TextView
           android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:ellipsize="end"
            android:gravity="start"
            android:letterSpacing="0.02"
            android:text="@string/zm_mesh_badge_client_found_421788"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zm_ui_kit_text_size_20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.02"
            android:layout_marginTop="@dimen/zm_margin_small_minus_size"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zm_ui_kit_text_size_13sp"
            android:paddingLeft="0dp"
            android:text="@string/zm_mesh_badge_info_421788" />

       <us.zoom.uicommon.widget.view.ZMCommonTextView
            style="@style/ZMInMeetingInfoItemContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zm_margin_small_minus_size"
            android:layout_marginBottom="@dimen/zm_margin_small_minus_size"
            android:maxLines="@integer/zm_unencrypted_connections_show_max_lines"
            android:lines="@integer/zm_unencrypted_connections_show_max_lines"
            android:scrollbars="vertical"
            android:visibility="invisible"
            android:text="" />

       <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingTop="@dimen/zm_margin_medium_size"
            android:paddingBottom="@dimen/zm_margin_medium_size"
            android:drawableLeft="@drawable/ic_back_blue"
            android:drawablePadding="@dimen/zm_padding_small_size"
            android:text="@string/zm_btn_back"
            android:textColor="@color/zm_v1_blue_B400" />
    </LinearLayout>
</LinearLayout>
