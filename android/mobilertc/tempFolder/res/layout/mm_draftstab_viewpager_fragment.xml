<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zm_white">
    <us.zoom.uicommon.widget.view.ZMIOSStyleTitlebarLayout
        android:id="@+id/panelTitleBar"
        style="@style/ZmTitleBar.Dark"
        zoom:zm_leftButton="@+id/leftButton"
        zoom:zm_rightButton="@+id/viewRight"
        zoom:zm_title="@+id/tab_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <RelativeLayout
            android:id="@+id/leftButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <FrameLayout
                android:id="@+id/back_button_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnClose"
                    style="@style/ZmTitleBarAction.Tablet"
                    android:text="@string/zm_btn_close"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/btnBack"
                    style="@style/ZmBackButton.Dark"
                    android:contentDescription="@string/zm_btn_back" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cancel_button_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone">
                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zm_btn_cancel"
                    android:textColor="@color/zm_draft_cancel_button_text"
                    android:layout_marginLeft="@dimen/zm_dialog_margin_16dp"
                    android:background="@drawable/zm_v2_bg_small_text_btn_dark"
                    android:contentDescription="@string/zm_draft_ax_cancel_selection_mode_479534"/>
            </FrameLayout>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="100dp"
                android:background="@color/zm_transparent"
                app:tabGravity="center"
                app:tabIndicatorColor="@color/zm_v1_white"
                app:tabTextColor="@color/zm_v1_white"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                >
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/drafts_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/zm_scheduled_message_tab_drafts_479453" />
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/scheduled_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/zm_scheduled_message_tab_scheduled_479453" />
            </com.google.android.material.tabs.TabLayout>
            <LinearLayout
                android:id="@+id/viewRight"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <us.zoom.uicommon.widget.view.ZMImageButton
                    android:id="@+id/delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zm_ic_btn_more_white"
                    android:contentDescription="@string/zm_draft_tab_accessibility_menu_426252"
                    style="@style/ZmBackButton.Dark"/>
            </LinearLayout>
            <us.zoom.uicommon.widget.view.ZMDynTextSizeTextView
                android:id="@+id/txtTitle"
                style="@style/ZmTitleBarTitle.Dark"
                android:text="@string/zm_draft_tab_title_426252"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>
    </us.zoom.uicommon.widget.view.ZMIOSStyleTitlebarLayout>
    <us.zoom.uicommon.widget.view.ZMViewPager
        android:id="@+id/tab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/panelTitleBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>