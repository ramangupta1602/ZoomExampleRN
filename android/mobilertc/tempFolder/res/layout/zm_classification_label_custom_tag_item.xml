<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/zm_white">

    <TextView
        android:id="@+id/txt_level_custom_tag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/zm_dialog_margin_16dp"
        android:layout_marginLeft="@dimen/zm_dialog_margin_16dp"
        android:layout_marginRight="@dimen/zm_dialog_margin_16dp"
        android:layout_marginBottom="@dimen/zm_padding_small"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:duplicateParentState="true"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/zm_v2_txt_primary"
        android:textSize="@dimen/zm_ui_kit_text_size_16sp"
        tools:text="Custom"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/zm_v2_cell_divider"/>

</LinearLayout>