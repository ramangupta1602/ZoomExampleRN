<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emojiCountsItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="@dimen/zm_padding_smallest_size">

    <ImageView
        android:id="@+id/emojiImg"
        android:layout_width="@dimen/zm_emoji_view_size"
        android:layout_height="@dimen/zm_emoji_view_size"
        android:focusable="false"
        android:src="@drawable/reaction_270b"
        android:layout_gravity="center_vertical"
        tools:ignore="ContentDescription" />

    <com.zipow.videobox.view.ZmMeetEmojiTextView
        android:id="@+id/emojiTextView"
        android:layout_width="@dimen/zm_emoji_view_size"
        android:layout_height="@dimen/zm_emoji_view_size"
        android:focusable="false"
        android:layout_gravity="center"
        android:textSize="15sp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/emojiCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/zm_dimen_smallest"
        android:focusable="false"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:text="3123"
        android:textColor="@color/zm_v2_txt_primary_color"/>

</LinearLayout>