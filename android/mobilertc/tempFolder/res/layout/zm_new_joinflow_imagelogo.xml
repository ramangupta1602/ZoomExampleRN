<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:ignore="ContentDescription"
        android:layout_marginBottom="@dimen/zm_dialog_margin_16dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <us.zoom.uicommon.widget.view.ZMCommonTextView
        android:id="@+id/txLogoTitle"
        style="@style/ZMTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/zm_v2_njf_logo_view_title_color"
        android:gravity="center"
        android:textSize="@dimen/zm_ui_kit_text_size_24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txLogoDes"
        app:layout_constrainedHeight="true"
        android:layout_marginBottom="@dimen/zm_dialog_margin_12dp"
       />
    <us.zoom.uicommon.widget.view.ZMCommonTextView
        android:id="@+id/txLogoDes"
        style="@style/ZMTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/zm_v2_voice_talk_cancel_bg"
        android:gravity="center"
        android:textSize="@dimen/zm_ui_kit_text_size_16sp"
        app:layout_constraintTop_toTopOf="@id/txLogoTitle"
        app:layout_constraintBottom_toTopOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>