<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_bottom_sheet_round_rect_bg_white"
    android:orientation="vertical">


   <us.zoom.uicommon.widget.view.ZMCommonTextView
        style="@style/ZmTextView.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zm_margin_normal_size"
        android:layout_marginTop="@dimen/zm_btn_width_48dp"
        android:layout_marginRight="@dimen/zm_margin_normal_size"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="@string/zm_meeting_in_progress_179549"
        android:textSize="@dimen/zm_ui_kit_text_size_22sp" />

   <us.zoom.uicommon.widget.view.ZMCommonTextView
        android:id="@+id/zm_tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/zm_transparent"
        android:text=""
        android:layout_marginTop="@dimen/zm_margin_small_6dp"
        android:textColor="@color/zm_v2_txt_secondary"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:ellipsize="end" />

    <Button
        android:id="@+id/zm_btn_join_in_companion"
        style="@style/ZmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zm_margin_normal_size"
        android:layout_marginTop="@dimen/zm_settings_item_min_height"
        android:layout_marginRight="@dimen/zm_margin_normal_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:minHeight="@dimen/zm_btn_large_height"
        android:text="@string/zm_btn_room_btn_join_in_companion_mode_179549" />

    <Button
        android:id="@+id/zm_btn_cancel"
        style="@style/ZmButton.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zm_margin_normal_size"
        android:layout_marginTop="@dimen/zm_margin_small_size"
        android:layout_marginRight="@dimen/zm_margin_normal_size"
        android:layout_marginBottom="@dimen/zm_width_50dp"
        android:minHeight="@dimen/zm_btn_large_height"
        android:text="@string/zm_btn_cancel" />


</LinearLayout>
