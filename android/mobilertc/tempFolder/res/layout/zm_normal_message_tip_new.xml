<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_tip_new_background"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/zm_ic_tick"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/divider"
        android:layout_width="5dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        >

        <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/txtTitle"
            style="@style/ZMTextView.TipMessage.Title.OnDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zm_msg_conf_waiting_to_invite_title" />

        <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/txtMessage"
            style="@style/ZMTextView.TipMessage.OnDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/zm_msg_conf_waiting_to_invite"
            />
    </LinearLayout>

</LinearLayout>