        android:drawableStart="@drawable/zm_ic_video_on"
        android:drawablePadding="@dimen/zm_padding_small"
        android:gravity="center"
        android:paddingStart="@dimen/zm_padding_small"
        android:paddingTop="@dimen/zm_padding_smallest_size"
        android:paddingEnd="@dimen/zm_padding_small"
        android:paddingBottom="@dimen/zm_padding_smallest_size"
