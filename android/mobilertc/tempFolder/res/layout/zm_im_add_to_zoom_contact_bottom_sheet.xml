<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_sheet_white_bg"
    android:paddingLeft="@dimen/zm_dialog_margin_24dp"
    android:paddingRight="@dimen/zm_dialog_margin_24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="43dp"
            android:text="@string/zm_im_add_to_zoom_contact_209114"
            android:textColor="@color/zm_v2_txt_primary"
            android:textSize="@dimen/zm_ui_kit_text_size_24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textContactName"
            style="@style/UIKitTextView.PrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/zm_margin_32dp"
            tools:text="Ashlee York"/>

        <TextView
            android:id="@+id/textContactEmail"
            style="@style/UIKitTextView.SecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            tools:text="ashlee.york@gmail.com" />

        <TextView
            android:id="@+id/textDesc"
            style="@style/UIKitTextView.SecondaryText.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:text="@string/zm_im_add_to_zoom_contact_send_desc_224840"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingLeft="@dimen/zm_dialog_margin_24dp"
            android:paddingBottom="40dp"
            android:paddingRight="@dimen/zm_dialog_margin_24dp">

            <Button
                android:id="@+id/btnSend"
                style="@style/ZmButton"
                android:text="@string/zm_im_add_to_zoom_contact_send_209114" />

        </FrameLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
