<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fontPickerView="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_bg_popup_window"
    android:orientation="vertical">

    <us.zoom.videomeetings.richtext.popup.ZMFontPickerView
        android:id="@+id/fontSizePickerView"
        fontPickerView:fontPickerMode="size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="gone" />

    <us.zoom.videomeetings.richtext.popup.ZMFontPickerView
        android:id="@+id/fontPickerView"
        fontPickerView:fontPickerMode="paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>
