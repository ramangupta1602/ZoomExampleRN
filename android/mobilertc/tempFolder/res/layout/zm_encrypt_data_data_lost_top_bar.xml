<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnCancel"
        style="@style/ZmButton.Text"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/zm_btn_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConfirm"
        style="@style/ZmButton.Text"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/zm_lbl_confirm"
        android:textColor="@color/zm_v2_btn_red_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivReviewLoading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        android:src="@drawable/zm_ic_loading_light_night_animated"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/btnConfirm"
        app:layout_constraintEnd_toEndOf="@id/btnConfirm"
        app:layout_constraintStart_toStartOf="@id/btnConfirm"
        app:layout_constraintTop_toTopOf="@id/btnConfirm"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>