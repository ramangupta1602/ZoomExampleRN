<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zm_v1_gray_1800"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/zmBoRoomView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zm_btn_large_height"
        android:layout_marginLeft="@dimen/zm_margin_smaller_size"
        android:layout_marginRight="@dimen/zm_margin_smaller_size"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/zm_padding_smaller_size"
            >

            <us.zoom.uicommon.widget.view.ZMCommonTextView
                android:id="@+id/txBoName"
                style="@style/UIKitTextView.CellTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="claire Hou"
                android:textColor="@color/zm_picker_dropdown_text_color_normal" />

            <LinearLayout
                android:id="@+id/panelistPanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <us.zoom.uicommon.widget.view.ZMCommonTextView
                    android:id="@+id/txUserNum"
                    style="@style/ZmTextView.Content.Secondary.Medium.Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_bo_room_proile"
                    android:drawablePadding="@dimen/zm_margin_small"
                    tools:text="5"

                    />
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imUserSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/zm_btn_select"
            android:src="@drawable/ic_item_select"
            android:paddingRight="@dimen/zm_padding_smaller_size"/>
    </LinearLayout>


</LinearLayout>