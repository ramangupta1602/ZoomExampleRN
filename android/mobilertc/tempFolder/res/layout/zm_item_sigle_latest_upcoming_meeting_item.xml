<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="@dimen/zm_padding_normal"
    android:paddingLeft="@dimen/zm_padding_normal"
    android:paddingRight="@dimen/zm_padding_normal"
    android:paddingBottom="@dimen/zm_padding_normal"
    android:descendantFocusability="blocksDescendants">
   <us.zoom.uicommon.widget.view.ZMCommonTextView
        android:id="@+id/txtTopic"
        style="@style/ZmTextView.Content.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:text="Topic 11111" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/zm_padding_normal"
        >

       <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/txtTime"
            style="@style/ZmTextView.Content.Primary.Medium.Dimmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            tools:text="09:00\AM-08:00PM" />
       <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/txtHostId"
            style="@style/ZmTextView.Content.Primary.Medium.Dimmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/zm_padding_medium"
            android:gravity="left"
            android:visibility="gone"/>

       <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/txtMeetingId"
            style="@style/ZmTextView.Content.Primary.Medium.Dimmed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/zm_padding_medium"
            android:gravity="left"
            tools:text="Meeting Id:789 456 123" />
    </LinearLayout>

    <Button
        android:id="@+id/btnStart"
        style="@style/ZmButton.Small"
        android:duplicateParentState="false"
        android:text="@string/zm_btn_start"
        android:layout_marginTop="@dimen/zm_padding_large"/>
</LinearLayout>
