<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_multitasking_topbar_menu_list_icon"
        android:layout_width="@dimen/zm_multitasking_title_height"
        android:layout_height="@dimen/zm_multitasking_title_height"
        android:layout_marginStart="@dimen/zm_margin_medium"
        android:src="@color/black"/>

    <TextView
        android:id="@+id/tv_multitasking_topbar_menu_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/zm_margin_medium"
        android:layout_marginEnd="@dimen/zm_margin_medium"
        android:text="title"
        android:textSize="@dimen/zm_font_large_size"
        android:textColor="@color/white"/>

</androidx.appcompat.widget.LinearLayoutCompat>