<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ZmDialogFragmentFullScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/zm_bottom_sheet_round_rect_bg">

        <TextView
            android:id="@+id/txt_nfc_sign_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zm_margin_normal_plus_size"
            android:layout_marginStart="@dimen/zm_margin_medium_size"
            android:layout_marginEnd="@dimen/zm_margin_medium_size"
            android:gravity="center"
            android:textColor="@color/zm_v2_chat_audio_record_title_text_color"
            android:textSize="@dimen/zm_font_larger_plus_size"
            android:text="@string/zm_pbx_nfc_sign_ip_device_title_txt_470970"/>

        <ImageView
            android:id="@+id/iv_nfc_sign_status"
            android:layout_width="@dimen/zm_btn_medium_min_width"
            android:layout_height="@dimen/zm_btn_medium_min_width"
            android:layout_marginTop="@dimen/zm_margin_normal_plus_size"
            android:src="@drawable/zm_ic_pbx_nfc_sign_ip_device"
            android:clickable="false"
            android:focusable="false"
            tools:ignore="contentDescription"/>

        <TextView
            android:id="@+id/txt_nfc_sign_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zm_margin_normal_plus_size"
            android:layout_marginStart="@dimen/zm_margin_medium_size"
            android:layout_marginEnd="@dimen/zm_margin_medium_size"
            android:gravity="center"
            android:textColor="@color/zm_v2_black_bg"
            android:textSize="@dimen/zm_font_normal_size"
            android:text="@string/zm_pbx_nfc_sign_ip_device_content_txt_470970"/>

        <Button
            android:id="@+id/btnCancel"
            style="@style/ZmButtonGray"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/zm_margin_normal_size"
            android:layout_marginTop="@dimen/zm_margin_normal_plus_size"
            android:layout_marginRight="@dimen/zm_margin_normal_size"
            android:layout_marginBottom="@dimen/zm_margin_normal_plus_size"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/zm_btn_cancel" />/>
    </LinearLayout>

</FrameLayout>