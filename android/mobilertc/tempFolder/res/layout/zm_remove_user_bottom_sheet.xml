<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_bottom_sheet_round_rect_bg">

    <LinearLayout
        android:id="@+id/itemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/zm_margin_normal_size">

       <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/txtExpelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/zm_alert_expel_user_confirm_title_200528"
            android:textColor="@color/zm_v2_txt_primary"
            android:textSize="@dimen/zm_ui_kit_text_size_24sp" />

       <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/txtExpelDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zm_margin_small_minus_size"
            android:gravity="center"
            android:text="@string/zm_alert_expel_user_confirm_meeting_200528"
            android:textColor="@color/zm_v2_txt_primary"
            android:textSize="@dimen/zm_ui_kit_text_size_13sp" />

        <Button
            android:id="@+id/btnRemoveAndReport"
            style="@style/UILargestButton.RedV2"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/zm_margin_large_minus_size"
            android:text="@string/zm_btn_remove_and_report_200528" />

        <Button
            android:id="@+id/btnRemove"
            style="@style/UILargestButton.GrayV2"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/zm_margin_small_size"
            android:text="@string/zm_btn_remove"
            android:textColor="@color/zm_v2_txt_desctructive" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/UILargestButton.GrayV2"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/zm_margin_small_size"
            android:text="@string/zm_btn_cancel" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
