<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/zm_margin_medium"
    android:background="@color/zm_white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ssosItem_tv_name"
        style="@style/ZmTextViewMultiLines.Ssos_name"
        android:layout_width="0dp"
        zoom:layout_constraintHorizontal_weight="3"
        android:layout_height="wrap_content"
        android:text="@string/zm_msg_meeting_security_settings_overview_item1_299543"
        zoom:layout_constraintBottom_toTopOf="@id/ssosItem_line"
        zoom:layout_constraintLeft_toLeftOf="parent"
        zoom:layout_constraintRight_toLeftOf="@id/ssosItem_tv_value"
        zoom:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ssosItem_tv_value"
        style="@style/ZmTextViewMultiLines.Ssos_value"
        zoom:layout_constraintHorizontal_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enabled"
        zoom:layout_constraintBottom_toBottomOf="@id/ssosItem_tv_name"
        zoom:layout_constraintLeft_toRightOf="@id/ssosItem_tv_name"
        zoom:layout_constraintRight_toRightOf="parent"
        zoom:layout_constraintTop_toTopOf="@id/ssosItem_tv_name" />

    <View
        android:id="@+id/ssosItem_line"
        style="@style/ZmSecuritySettingsOverviewSheetStyle.Margin"
        zoom:layout_constraintBottom_toBottomOf="parent"
        zoom:layout_constraintTop_toBottomOf="@id/ssosItem_tv_name" />
</androidx.constraintlayout.widget.ConstraintLayout>