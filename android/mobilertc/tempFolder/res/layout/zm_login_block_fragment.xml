<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zm_window_bg"
    android:minWidth="500dp"
    android:orientation="vertical">

    <us.zoom.uicommon.widget.view.ZMIOSStyleTitlebarLayout
        android:id="@+id/panelTitleBar"
        style="@style/ZmTitleBar"
        zoom:zm_leftButton="@+id/btnBack"
        zoom:zm_rightButton="@+id/btnSignup"
        zoom:zm_title="@+id/title">

        <Button
            android:id="@+id/btnBack"
            style="@style/ZmTitleBarAction"
            android:contentDescription="@string/zm_btn_cancel"
            android:minWidth="@dimen/zm_btn_width_48dp"
            android:minHeight="@dimen/zm_btn_width_48dp"
            android:text="@string/zm_btn_cancel" />

        <us.zoom.uicommon.widget.view.ZMCommonTextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/zm_margin_medium_size"
            android:paddingLeft="@dimen/zm_padding_smallest_size"
            android:paddingRight="@dimen/zm_padding_smallest_size"
            android:text="@string/zm_login_uuid_block_title_366822"
            android:textColor="@color/zm_v2_txt_title_header"
            android:textSize="@dimen/zm_font_large_size" />

    </us.zoom.uicommon.widget.view.ZMIOSStyleTitlebarLayout>

    <us.zoom.uicommon.widget.view.ZMCommonTextView
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/zm_padding_normal_size"
        android:paddingBottom="@dimen/zm_padding_normal_size"
        android:text="@string/zm_login_uuid_block_input_email_366822"
        android:textColor="@color/zm_v2_txt_title_header"
        android:textSize="@dimen/zm_font_large_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zm_white"
        android:gravity="center_vertical"
        android:minHeight="@dimen/zm_edit_text_normal_height"
        android:orientation="horizontal"
        android:padding="@dimen/zm_padding_normal_size">

        <EditText
            android:id="@+id/edtEmail"
            style="@style/ZmInputBox"
            android:hint="@string/zm_login_uuid_block_email_hint_366822"
            android:inputType="textEmailAddress"
            android:maxLength="128" />
    </LinearLayout>

    <us.zoom.uicommon.widget.view.ZMCommonTextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/zm_padding_normal_size"
        android:paddingBottom="@dimen/zm_padding_normal_size"
        android:text="@string/zm_login_uuid_block_input_name_366822"
        android:textColor="@color/zm_v2_txt_title_header"
        android:textSize="@dimen/zm_font_large_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zm_white"
        android:gravity="center_vertical"
        android:minHeight="@dimen/zm_edit_text_normal_height"
        android:orientation="horizontal"
        android:padding="@dimen/zm_padding_normal_size">


        <EditText
            android:id="@+id/edtFullName"
            style="@style/ZmInputBox"
            android:hint="@string/zm_login_uuid_block_name_hint_366822"
            android:inputType="textEmailAddress"
            android:maxLength="128" />
    </LinearLayout>

    <us.zoom.uicommon.widget.view.ZMCommonTextView
        android:id="@+id/txtPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/zm_padding_normal_size"
        android:text="@string/zm_login_uuid_block_privacy_366822"
        android:textColor="@color/zm_v2_txt_secondary"
        android:textSize="@dimen/zm_ui_kit_text_size_12sp" />

    <Button
        android:id="@+id/btnSubmit"
        style="@style/ZmButton"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/zm_margin_medium_size"
        android:layout_marginTop="@dimen/zm_margin_medium_size"
        android:layout_marginRight="@dimen/zm_margin_medium_size"
        android:text="@string/zm_polling_btn_submit" />

</LinearLayout>