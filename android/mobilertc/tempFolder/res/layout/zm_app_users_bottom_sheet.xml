<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/in_meeting_info_bg"
    android:maxHeight="@dimen/zm_bottom_sheet_height"
    android:orientation="vertical"
    android:paddingLeft="@dimen/zm_margin_normal"
    android:paddingTop="30dp"
    android:paddingRight="@dimen/zm_margin_normal"
    android:paddingBottom="30dp">

    <us.zoom.uicommon.widget.recyclerview.ZMRecyclerView
        android:id="@+id/recyclerViewUsers"
        style="@style/MMChatListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/zm_transparent"
        android:divider="@null"
        android:visibility="gone"
        tools:itemCount="3"
        tools:listitem="@layout/zm_app_with_real_time_access_people_item"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_back_blue"
        android:drawablePadding="@dimen/zm_padding_small_size"
        android:paddingTop="@dimen/zm_margin_medium_size"
        android:paddingBottom="@dimen/zm_margin_medium_size"
        android:text="@string/zm_btn_back"
        android:textColor="@color/zm_v1_blue_B400" />

</LinearLayout>
