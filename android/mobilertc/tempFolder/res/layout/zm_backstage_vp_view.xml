<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llVpView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_backstage_page_bg1"
    android:gravity="center_vertical"
    android:orientation="horizontal">

   <us.zoom.uicommon.widget.view.ZMCommonTextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/zm_margin_medium_size"
        android:layout_weight="1"
        android:text="@string/zm_gr_backstage_guide_title1_267913"
        android:textColor="@color/zm_v1_white"
        android:textSize="@dimen/zm_font_largest_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgGuide"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="@dimen/zm_margin_medium_size"
        android:scaleType="fitCenter"
        android:src="@drawable/zm_backstage_page_index1"
        android:importantForAccessibility="no"
        tools:ignore="ContentDescription" />
</LinearLayout>