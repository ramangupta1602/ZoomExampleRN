<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <us.zoom.uicommon.widget.listview.PullDownRefreshListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:divider="@color/zm_v2_svg_setting_divider"
        android:background="@drawable/zm_listview_bg">
    </us.zoom.uicommon.widget.listview.PullDownRefreshListView>


    <LinearLayout android:orientation="vertical"
              android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:visibility="visible"
        android:id="@+id/emptyView">
        <TextView android:id="@+id/emptyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ZMTextView.Medium.Dimmed"

            />

      <Button
          android:id="@+id/emptyBtn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingRight="12dp"
          android:paddingLeft="12dp"
          android:paddingTop="7dp"
          android:paddingBottom="7dp"
          android:layout_marginTop="24dp"
          android:visibility="gone"
          style="@style/ZMButton.NewHappyPath.Medium">

      </Button>
    </LinearLayout>



    <us.zoom.uicommon.widget.view.QuickSearchSideBar
        android:id="@+id/quickSearchSideBar"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_gravity="right" />

    <TextView
        android:id="@+id/txtQuickSearchChar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/zm_quick_search_char_bg"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/zm_ui_kit_color_white_ffffff"
        android:textSize="48sp"
        android:textStyle="bold" />

</merge>