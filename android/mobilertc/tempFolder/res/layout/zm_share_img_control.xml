<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_bg_float_gray_normal"
    android:orientation="horizontal"
    android:padding="@dimen/zm_padding_normal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/zm_bg_rectangle"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnZoomIn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="@dimen/zm_margin_smallest"
            android:paddingTop="@dimen/zm_share_toolbar_margin"
            android:paddingRight="@dimen/zm_margin_smallest"
            android:background="@drawable/zm_bg_control_item"
            android:src="@drawable/zm_ic_plus"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btnZoomOut"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="@dimen/zm_margin_smallest"
            android:paddingRight="@dimen/zm_margin_smallest"
            android:background="@drawable/zm_bg_control_item"
            android:paddingBottom="@dimen/zm_share_toolbar_margin"
            android:src="@drawable/zm_ic_subtract"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/zm_control_arrow_view_wh"
        android:layout_height="@dimen/zm_control_arrow_view_wh"
        android:layout_marginLeft="@dimen/zm_margin_normal"
        android:background="@drawable/zm_bg_union">

        <ImageView
            android:id="@+id/btnUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/zm_margin_smallest"
            android:background="@drawable/zm_bg_control_item"
            android:src="@drawable/zm_ic_up"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btnDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/zm_margin_smallest"
            android:background="@drawable/zm_bg_control_item"
            android:src="@drawable/zm_ic_down"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/zm_margin_smallest"
            android:background="@drawable/zm_bg_control_item"
            android:src="@drawable/zm_ic_left"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/zm_margin_smallest"
            android:background="@drawable/zm_bg_control_item"
            android:src="@drawable/zm_ic_right"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</LinearLayout>