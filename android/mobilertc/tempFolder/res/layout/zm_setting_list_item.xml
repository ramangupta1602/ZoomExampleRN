<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ZmSettingItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zm_white">

    <TextView
        android:id="@+id/tvName"
        style="@style/ZmSettingItemTitle"
        android:layout_width="0dp"
        android:layout_weight="3"
        tools:text="@string/zm_tab_content_meetings_52777" />

    <TextView
        android:id="@+id/tvRingtone"
        style="@style/ZmSettingItemContent"
        android:layout_width="wrap_content"
        android:layout_weight="0"
        tools:text="@string/zm_lbl_meeting_reaction_skin_tone_default_122373" />

    <ImageView
        style="@style/ZmSettingItemArrow"
        android:layout_marginLeft="@dimen/zm_margin_small_size"
        android:contentDescription="@string/zm_msg_button_292937" />
</LinearLayout>