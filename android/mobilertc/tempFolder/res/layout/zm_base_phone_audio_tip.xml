<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zm_white"
    android:paddingLeft="@dimen/zm_control_arrow_view_wh"
    android:paddingRight="@dimen/zm_control_arrow_view_wh">

        <LinearLayout
            android:id="@+id/panelActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

           <us.zoom.uicommon.widget.view.ZMCommonTextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ZmButton.Secondary"
                android:background="@color/zm_transparent"
                android:text="@string/zm_lbl_audio_option_zoom_phone_title_424277" />

            <Button
                android:id="@+id/btnJoinZoomPhoneAudio"
                style="@style/ZmButton"
                android:layout_marginTop="@dimen/zm_margin_medium_size"
                android:focusable="true"
                android:text="@string/zm_lbl_audio_option_zoom_phone_424277" />
            <Button
                android:id="@+id/btnHangUp"
                style="@style/ZmButton"
                android:layout_marginTop="@dimen/zm_margin_medium_size"
                android:focusable="true"
                android:text="@string/zm_accessbility_sip_hangup_call_61394"
                android:visibility="gone"/>
            <Button
                android:id="@+id/btnCancel"
                style="@style/ZmButton.Secondary"
                android:layout_marginTop="@dimen/zm_margin_small_size"
                android:text="@string/zm_lbl_audio_option_no_audio_424277" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>