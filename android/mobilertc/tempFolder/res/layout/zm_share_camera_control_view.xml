<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_bg_float_gray_normal"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/btnZoomIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/zm_padding_smaller_size"
        android:background="@drawable/zm_bg_control_item"
        android:layout_marginBottom="@dimen/zm_margin_smallest_size"
        android:src="@drawable/zm_ic_plus"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btnZoomOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/zm_padding_smaller_size"
        android:layout_marginTop="@dimen/zm_margin_smallest_size"
        android:background="@drawable/zm_bg_control_item"
        android:src="@drawable/zm_ic_subtract"
        tools:ignore="ContentDescription" />


</LinearLayout>