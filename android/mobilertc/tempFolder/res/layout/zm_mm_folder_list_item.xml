<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="60dp">

    <com.zipow.videobox.view.AvatarView
        android:id="@+id/zm_mm_folder_list_item_avatarView"
        android:layout_width="@dimen/zm_avatar_size"
        android:layout_height="@dimen/zm_avatar_size"
        android:layout_marginLeft="@dimen/zm_margin_small_size">

    </com.zipow.videobox.view.AvatarView>
    <LinearLayout
        android:layout_width="0px"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/zm_mm_folder_list_item_Name"
            style="@style/ZmTextView.Content.Primary"
            tools:text="@tools:sample/full_names"
            android:paddingLeft="0dp"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/zm_margin_small_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical">
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:src="@drawable/zm_next_arrow"
            tools:ignore="ContentDescription" />
    </LinearLayout>


</LinearLayout>